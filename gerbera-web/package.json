{
  "name": "gerbera-web",
  "version": "3.2.0",
  "repository": "https://github.com/gerbera/gerbera",
  "license": "GPLv2",
  "scripts": {
    "start": "node index.js",
    "test": "karma start karma.conf.js",
    "test:debug": "karma start karma.conf.js --log-level debug",
    "test:e2e": "concurrently --success first --kill-others \"npm start\" \"npm run e2e\"",
    "e2e": "SELENIUM_BROWSER=chrome mocha --config test/.mocharc.yml \"test/e2e/**.spec.js\"",
    "screenshot": "rimraf _build && mkdirp _build/doc && SELENIUM_BROWSER=chrome RUNFILES_DIR=node_modules/@bazel/runfiles/ mocha --config test/.mocharc.yml \"test/e2e/screenshot.doc.js\" --folderPath=/_build/doc/ --scheme=light",
    "screenshot-dark": "rimraf _build && mkdirp _build/doc && SELENIUM_BROWSER=chrome RUNFILES_DIR=node_modules/@bazel/runfiles/ mocha --config test/.mocharc.yml \"test/e2e/screenshot.doc.js\" --folderPath=/_build/doc/ --scheme=dark",
    "doc:screenshot": "concurrently --success first --kill-others \"npm start\" \"npm run screenshot\"",
    "doc:screenshot-dark": "concurrently --success first --kill-others \"npm start\" \"npm run screenshot-dark\"",
    "lint": "eslint -c .eslintrc ../web/js/*gerbera*.js"
  },
  "config": {
    "webserver": {
      "port": 3000,
      "host": "localhost"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.29.0",
    "@babel/register": "^7.28.6",
    "@popperjs/core": "^2.11.8",
    "babel-loader": "^10.0.0",
    "bootstrap": "^4.6.2",
    "braces": "^3.0.3",
    "chai": "^6.2.2",
    "chromedriver": "^146.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.6.0",
    "express": "^5.2.1",
    "jasmine-core": "^6.1.0",
    "jimp": "^1.6.0",
    "jquery": "^3.7.1",
    "jquery-ui": "^1.14.2",
    "js-cookie": "^3.0.5",
    "karma": "^6.4.4",
    "karma-babel-preprocessor": "^8.0.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-fixture": "^0.2.6",
    "karma-html2js-preprocessor": "^1.1.0",
    "karma-jasmine": "^5.1.0",
    "karma-json-fixtures-preprocessor": "^0.0.6",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-spec-reporter": "^0.0.36",
    "karma-webpack": "^5.0.1",
    "lodash": "^4.17.23",
    "mkdirp": "^3.0.1",
    "mocha": "^11.7.5",
    "rimraf": "^6.1.3",
    "selenium-webdriver": "^4.41.0",
    "webpack": "^5.105.3",
    "yargs": "^18.0.0"
  }
}
