# Profile for gerbera development
include(default)
include(./common)

[settings]
build_type=Debug

[options]
*:shared=False
gerbera:debug_logging=True
gerbera:tests=True
# Work around ffmpeg package bugs
# https://github.com/conan-io/conan-center-index/issues/10442
ffmpeg:with_libx265=False
ffmpeg:with_openjpeg=False

[env]
gerbera:CXXFLAGS=-Og -Werror -Wall
# Requires CMake >= 3.17
CMAKE_EXPORT_COMPILE_COMMANDS=ON
