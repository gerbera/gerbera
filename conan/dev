# Profile for gerbera development
include(default)
include(./common)

[settings]
build_type=Debug

[options]
# Use shared libraries for faster link time
*:shared=True
&:debug_logging=True
&:tests=True
&:exiv2=False
&:postgres=True
&:mysql=False

[buildenv]
gerbera:CXXFLAGS=-Og -Werror -Wall
# Requires CMake >= 3.17
CMAKE_EXPORT_COMPILE_COMMANDS=ON
CMAKE_POLICY_VERSION_MINIMUM=3.18
