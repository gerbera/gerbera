# Profile for gerbera development
include(default)
include(./common)

[settings]
build_type=Debug

[options]
pupnp/*:ipv6=True
pupnp/*:reuseaddr=True
pupnp/*:blocking-tcp=False
# Use shared libraries for faster link time
*:shared=True
debug_logging=True
tests=True

[buildenv]
gerbera:CXXFLAGS=-Og -Werror -Wall
# Requires CMake >= 3.17
CMAKE_EXPORT_COMPILE_COMMANDS=ON
